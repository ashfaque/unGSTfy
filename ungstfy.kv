<MainWidget>:
    cols: 2
    Label:
        id: amount_with_gst
        text: "Total Amount with GST: "
        font_size: 30
        text_size: self.width, None
        halign: 'left'
    TextInput:
        id: amount_with_gst_input
        # text: ""
        font_size: 30
        text_size: self.width, None
        halign: 'left'
        input_filter: 'float'
        hint_text:'Total Amount with GST'
        write_tab: False
        multiline: False
        on_text: app.process()

    Label:
        id: rate_of_gst
        text: "GST %: "
        font_size: 30
        text_size: self.width, None
        halign: 'left'
    TextInput:
        id: rate_of_gst_input
        # text: ""
        font_size: 30
        text_size: self.width, None
        halign: 'left'
        input_filter: 'float'
        hint_text:'GST %'
        write_tab: False
        multiline: False
        on_text: app.process()

    Label:
        id: amount_without_gst
        text: "Taxable Value: "
        font_size: 30
        text_size: self.width, None
        halign: 'left'
    TextInput:
        id: amount_without_gst_output
        # text: ""
        font_size: 30
        text_size: self.width, None
        halign: 'left'
        input_filter: 'float'
        hint_text: 'Taxable Value'
        write_tab: False
        multiline: False
        readonly: True

    Label:
        id: created_by
        text: "Created By: "
        font_size: 20
        text_size: self.width, None
        halign: 'center'
    Label:
        id: author_name
        text: "Ashfaque Alam"
        font_size: 20
        text_size: self.width, None
        halign: 'center'
